<div class="container mt-3">
  <div class="row">
    <h1>All our Flats <%= "(#{@flats.count})" %></h1>
  </div>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-3 d-flex align-items-stretch"">
        <div class="card" style="width: 18rem;">
          <div class="card-body">
            <h5 class="card-title"><%= "#{flat.name}" %></h5>
            <p class="card-text"><%= "#{flat.address}" %></p>
            <div class="d-flex">
              <div class="d-flex">
                <i class="material-icons me-2">people</i>
                <span><%= "#{flat.number_of_guests}" %></span>
              </div>
              <div class="d-flex">
                <i class="material-icons me-2">euro_symbol</i>
                <span><%= "#{flat.price_per_night}" %></span>
              </div>
            </div>
          </div>
          <div class="card-body" id="links">
            <%= link_to "More info", flat_path(flat) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
